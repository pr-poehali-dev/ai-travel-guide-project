{
  "tests": [
    {
      "name": "Test OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Test POST with valid email",
      "method": "POST",
      "path": "/",
      "body": {
        "email": "test@example.com"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test POST with invalid email",
      "method": "POST",
      "path": "/",
      "body": {
        "email": "invalid-email"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Invalid email"
      },
      "bodyMatcher": "partial"
    }
  ]
}
